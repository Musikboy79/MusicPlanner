                @Html.DisplayNameFor(model => model.Preparation)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.PreparationNumber)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Communion)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.CommunionNumber)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Closing)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.ClosingNumber)
            </th>*@
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="white-space: nowrap;">
                    <a href="@Url.Action("Edit", "MonthlyMusic", new {id = item.MusicID})" title="Edit Monthly Music" class="btn btn-primary">Edit</a>
                    <a href="@Url.Action("Delete", "MonthlyMusic", new {id = item.MusicID})" title="Delete Entry" class="btn btn-danger">Delete</a>
                    <a href="@Url.Action("Details", "MonthlyMusic", new {id = item.MusicID})" title="Music Details" class="btn btn-warning">Details</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.churchDay)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Opening)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.OpeningNumber)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Psalm)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.PsalmNumber)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Preparation)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.PreparationNumber)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Communion)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.CommunionNumber)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Closing)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.ClosingNumber)
                </td>*@
            </tr>
        }
        </tbody>
